<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/trtckaraoke_bg_bottom_dialog"
    android:orientation="vertical"
    tools:background="@drawable/trtckaraoke_bg_bottom_dialog">

    <View
        android:id="@+id/top_line"
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/trtckaraoke_bg_separate_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/top_line"
        app:tabIndicatorColor="@color/trtckaraoke_color_bg_text_bottom"
        app:tabIndicatorHeight="4dp"
        app:tabMinWidth="16dp"
        app:tabSelectedTextColor="@color/trtckaraoke_color_bg_text_bottom"
        app:tabTextAppearance="@style/TRTCKtvBaseTabFragmentTabText"
        app:tabTextColor="@color/trtckaraoke_white" />

    <View
        android:id="@+id/line_seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/trtckaraoke_bg_separate_line"
        app:layout_constraintTop_toBottomOf="@+id/tl_top" />

    <com.tencent.liteav.tuikaraoke.ui.music.CustomViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="280dp"
        app:layout_constraintTop_toBottomOf="@+id/line_seperator" />
</android.support.constraint.ConstraintLayout>